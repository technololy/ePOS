                            <x:String>Merchant</x:String>
                            <x:String>Submerchant</x:String>

                        </x:Array>
                    </c:MyPicker.ItemsSource>
                </c:MyPicker>-->

                <Button
                    x:Name="btnRegister"
                    Clicked="btnRegister_Clicked"
                    Text="Register" />
            </StackLayout>
